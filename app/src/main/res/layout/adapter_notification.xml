<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clNotificationItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true">

        <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="@string/order_request_received"
            android:textColor="@color/radio_uncheck_color"
            android:textSize="@dimen/_12ssp"
            app:customFont="poppins_semibold.ttf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="@string/_09_24_pm"
            android:textColor="@color/dark_text_color"
            android:textSize="@dimen/_10ssp"
            app:customFont="poppins_semibold.ttf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



        <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
            android:id="@+id/tvNotificationDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="You have received a new ORDER DL-1039 request from  John Doe. Your service Home Cleaning Services has  been booked on 2022-Feb-07 at 07:30 pm."
            android:textColor="@color/radio_uncheck_color"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:customFont="poppins_regular.ttf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:layout_marginBottom="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/notification_adapter_line_color"
            app:layout_constraintTop_toBottomOf="@+id/tvNotificationDetails"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>