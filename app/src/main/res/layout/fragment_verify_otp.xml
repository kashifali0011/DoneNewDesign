<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:background="@drawable/bg_round_light_blue_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imAppLogo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:src="@drawable/ic_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
            android:id="@+id/tvCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/verify_otp"
            android:textColor="@color/non_fill_tab"
            android:textSize="@dimen/_14ssp"
            app:customFont="poppins_semibold.ttf"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imAppLogo" />

        <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
            android:id="@+id/tvFourDigitCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/a_four_digit_code_has_been_sent_to_your_entered_mobile_number_for_verification_process"
            android:textColor="@color/non_fill_tab"
            android:textSize="@dimen/_10ssp"
            app:customFont="poppins_regular.ttf"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCreateAccount" />

        <LinearLayout
            android:id="@+id/llPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFourDigitCode"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardElevation="@dimen/_3sdp">

                <com.dtech.done.doneapp.utilities.helper.TypeFaceEditText
                    android:id="@+id/et1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/bg_et_pin"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="@color/blue_text_color"
                    app:customFont="poppins_semibold.ttf" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardElevation="@dimen/_3sdp">

                <com.dtech.done.doneapp.utilities.helper.TypeFaceEditText
                    android:id="@+id/et2"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/bg_et_disable"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="@color/blue_text_color"
                    app:customFont="poppins_semibold.ttf" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardElevation="@dimen/_3sdp">

                <com.dtech.done.doneapp.utilities.helper.TypeFaceEditText
                    android:id="@+id/et3"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/bg_et_disable"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="@color/blue_text_color"
                    app:customFont="poppins_semibold.ttf" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardElevation="@dimen/_3sdp">

                <com.dtech.done.doneapp.utilities.helper.TypeFaceEditText
                    android:id="@+id/et4"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/bg_et_disable"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="@color/blue_text_color"
                    app:customFont="poppins_semibold.ttf" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
            android:id="@+id/tvResendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/resend_code"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:customFont="poppins_regular.ttf"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llPin" />

        <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="00:59"
            android:textColor="@color/non_fill_tab"
            android:textSize="@dimen/_16ssp"
            app:customFont="poppins_semibold.ttf"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvResendCode" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>