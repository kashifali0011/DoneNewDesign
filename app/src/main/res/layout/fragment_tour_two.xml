<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_190sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:src="@drawable/ic_tour_two" />


            <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="@string/qualified_verified_professionals"
                android:textColor="@color/dark_text_color"
                android:textSize="@dimen/_12ssp"
                app:customFont="poppins_medium.ttf" />

            <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:gravity="center"
                android:text="@string/tour_two_description"
                android:textColor="@color/light_text_color"
                android:textSize="@dimen/_10ssp"
                app:customFont="poppins_regular.ttf" />
        </LinearLayout>
    </RelativeLayout>
</layout>