<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true">



            <LinearLayout
                android:id="@+id/inner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:src="@drawable/ic_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
                    android:id="@+id/tvByVerify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/by_verify_pin_delete_account"
                    android:textAlignment="center"
                    android:textColor="@color/light_grey_txt"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    app:customFont="poppins_medium.ttf"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivLogo" />

                <LinearLayout
                    android:id="@+id/llPin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvByVerify"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_6sdp"
                        app:cardElevation="@dimen/_3sdp">

                        <com.dtech.done.doneapp.utilities.helper.TypeFaceEditText
                            android:id="@+id/et1"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/bg_et_disable"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textSize="@dimen/_18ssp"
                            android:textColor="@color/blue_text_color"
                            app:customFont="poppins_semibold.ttf" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_6sdp"
                        app:cardElevation="@dimen/_3sdp">

                        <com.dtech.done.doneapp.utilities.helper.TypeFaceEditText
                            android:id="@+id/et2"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/bg_et_disable"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textSize="@dimen/_18ssp"
                            android:textColor="@color/blue_text_color"
                            app:customFont="poppins_semibold.ttf" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_6sdp"
                        app:cardElevation="@dimen/_3sdp">

                        <com.dtech.done.doneapp.utilities.helper.TypeFaceEditText
                            android:id="@+id/et3"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/bg_et_disable"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textSize="@dimen/_18ssp"
                            android:textColor="@color/blue_text_color"
                            app:customFont="poppins_semibold.ttf" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_6sdp"
                        app:cardElevation="@dimen/_3sdp">

                        <com.dtech.done.doneapp.utilities.helper.TypeFaceEditText
                            android:id="@+id/et4"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/bg_et_disable"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textSize="@dimen/_18ssp"
                            android:textColor="@color/blue_text_color"
                            app:customFont="poppins_semibold.ttf" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <com.dtech.done.doneapp.utilities.helper.TypeFaceButton
                    android:id="@+id/btnDeleteAccount"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_btn_delete_account"
                    android:textAllCaps="false"
                    android:text="@string/delete_account"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/white"
                    app:customFont="poppins_semibold.ttf"
                    android:layout_gravity="center"/>
                <com.dtech.done.doneapp.utilities.helper.TypeFaceButton
                    android:id="@+id/btnGoBack"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/bg_btn_go_back"
                    android:textAllCaps="false"
                    android:text="@string/whoops_go_back"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/white"
                    app:customFont="poppins_semibold.ttf"
                    android:layout_gravity="center"/>
            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
