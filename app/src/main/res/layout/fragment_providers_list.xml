<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/provider_back_color"
    android:focusable="true"
    android:clickable="true">
   <LinearLayout
       android:id="@+id/llSelection"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:background="@color/provider_back_color"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:orientation="horizontal">
       <androidx.cardview.widget.CardView
           android:layout_marginBottom="@dimen/_10ssp"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_marginStart="@dimen/_15sdp"
           android:layout_marginEnd="@dimen/_3sdp"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_30sdp"
           android:layout_weight="1"
           app:cardBackgroundColor="@color/white"
           app:cardCornerRadius="@dimen/_5sdp"
           app:cardElevation="@dimen/_5sdp"
           >
           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/llSortedDropList"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               >
               <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
                   android:id="@+id/tvSortBy"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   android:text="@string/sort_by"
                   android:layout_marginStart="@dimen/_10sdp"
                   android:textSize="@dimen/_8ssp"
                   android:textColor="@color/non_fill_tab"
                   app:customFont="poppins_semibold.ttf"
                   />
               <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toEndOf="@+id/tvSortBy"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/_5sdp"
                   android:text="@string/low_price"
                   android:id="@+id/tvSelectPriceStatus"

                   android:textSize="@dimen/_8ssp"
                   android:gravity="center"
                   android:textColor="@color/non_fill_tab"
                   app:customFont="poppins_regular.ttf"
                   />
               <ImageView
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginEnd="@dimen/_10sdp"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:id="@+id/ivDropDown"
                   android:layout_width="@dimen/_20sdp"
                   android:layout_height="@dimen/_15sdp"
                   android:layout_gravity="center"
                   android:src="@drawable/arrow_angle_down_circle"/>


           </androidx.constraintlayout.widget.ConstraintLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_marginBottom="@dimen/_10ssp"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_marginStart="@dimen/_3sdp"
           android:layout_marginEnd="@dimen/_15sdp"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_30sdp"
           android:layout_weight="1"
           app:cardBackgroundColor="@color/white"
           app:cardCornerRadius="@dimen/_5sdp"
           app:cardElevation="@dimen/_5sdp">
           <RelativeLayout
               android:id="@+id/llDate"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_30sdp"
               android:orientation="horizontal"
               android:gravity="center_vertical">

               <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
                   android:id="@+id/tvSelectDateAndTime"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginStart="@dimen/_10sdp"
                   android:layout_marginEnd="@dimen/_10sdp"
                   android:text="@string/select_date_amp_time"
                   android:textColor="@color/non_fill_tab"
                   android:textSize="@dimen/_8ssp"
                   app:customFont="poppins_regular.ttf" />

               <ImageView
                   android:id="@+id/ivCalender"
                   android:layout_width="@dimen/_15sdp"
                   android:layout_height="@dimen/_15sdp"
                   android:layout_alignParentEnd="true"
                   android:layout_centerVertical="true"
                   android:layout_marginEnd="@dimen/_10sdp"
                   android:src="@drawable/calender" />


           </RelativeLayout>
       </androidx.cardview.widget.CardView>
   </LinearLayout>
    <com.dtech.done.doneapp.utilities.helper.TypeFaceRecyclerView
        android:id="@+id/rvProviderDetailList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:paddingBottom="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llSelection"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>