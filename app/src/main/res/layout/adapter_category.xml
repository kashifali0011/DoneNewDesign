<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_138sdp"
        android:id="@+id/rlSearchLocation">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvRoot"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_120sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_3sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbSelectServices"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:enabled="false"
                    android:button="@drawable/ic_services_radio_button_design"
                    android:gravity="center" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivServiceIcon"
                    android:layout_width="@dimen/_46sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop" />

                <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
                    android:id="@+id/tvServiceType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_10ssp"
                    app:customFont="poppins_semibold.ttf" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</layout>