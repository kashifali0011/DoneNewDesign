<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:clickable="true">
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rlAboutText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_provider"
            android:textColor="@color/non_fill_tab"
            android:textSize="@dimen/_14ssp"
            app:customFont="poppins_semibold.ttf" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/rating_star_icon" />

            <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="@dimen/_10sdp"
                android:text="4.0"
                android:textColor="@color/non_fill_tab"
                android:textSize="@dimen/_10ssp"
                app:customFont="poppins_semibold.ttf" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
       <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
           android:id="@+id/tvDetail"
          android:layout_width="match_parent"
           android:visibility="gone"
          android:layout_height="wrap_content"
          android:text="@string/dumy_text"
          android:textColor="@color/non_fill_tab"
          android:textSize="@dimen/_12ssp"
          app:customFont="poppins_regular.ttf"
          android:layout_marginStart="@dimen/_15sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_marginEnd="@dimen/_15sdp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/rlAboutText"
    />
    <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
        android:id="@+id/tvServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/services_selected"
        android:textColor="@color/non_fill_tab"
        android:textSize="@dimen/_14ssp"
        app:customFont="poppins_semibold.ttf"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetail"/>
    <RelativeLayout
        android:id="@+id/rlServicesDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvServices"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Cleaning Services"
                android:textColor="@color/non_fill_tab"
                android:textSize="@dimen/_10ssp"
                app:customFont="poppins_regular.ttf" />

            <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Flat - 1 BD, living, Bathroom &amp; Kitchen"
                android:textColor="@color/non_fill_tab"
                android:textSize="@dimen/_12ssp"
                app:customFont="poppins_medium.ttf" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivEdit"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/edit_icon" />
    </RelativeLayout>
    <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
        android:id="@+id/tvSelectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_date"
        android:textColor="@color/non_fill_tab"
        android:textSize="@dimen/_14ssp"
        app:customFont="poppins_semibold.ttf"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlServicesDetail"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvSelectDate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectDate">
        <RelativeLayout
            android:id="@+id/llDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivCalender"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/calender" />
                <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
                    android:id="@+id/tvDate"
                    android:text="date"
                    android:layout_marginEnd="@dimen/_2ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/non_fill_tab"
                    android:textSize="@dimen/_14ssp"
                    app:customFont="poppins_regular.ttf" />
            </LinearLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
        android:id="@+id/tvSelectTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_time"
        android:textColor="@color/non_fill_tab"
        android:textSize="@dimen/_14ssp"
        app:customFont="poppins_semibold.ttf"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvSelectDate"/>
    <com.dtech.done.doneapp.utilities.helper.TypeFaceRecyclerView
        android:id="@+id/rvTimeSlots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:gravity="center"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectTime"/>

    <com.dtech.done.doneapp.utilities.helper.TypeFaceTextView
        android:id="@+id/tvEmpty"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="@string/sorry_this_time_slot_is_fully_booked"
        android:textColor="@color/non_fill_tab"
        android:textSize="@dimen/_12ssp"
        app:customFont="poppins_semibold.ttf"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectTime"/>


    <com.dtech.done.doneapp.utilities.helper.TypeFaceButton
        android:id="@+id/btnReserveSlot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:background="@drawable/btn_rount_corner"
        android:text="@string/btn_reserve_slot"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:customFont="poppins_medium.ttf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvTimeSlots" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>